<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	
	<display-name>xiaobin's web</display-name>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<!-- 默认是/WEB-INF/applicationConfig.xml -->
		<param-value>
			classpath:spring-mvc.xml
			classpath:spring-mybatis.xml
		</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>springMvc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<!-- spring-mvc具体的配置文件，默认是/WEB-INF/[servlet名字]-servlet.xml -->
			<param-value>classpath:spring-mvc.xml</param-value>
		</init-param>
		<!-- servlet加载的优先级，当值大于等于0时在应用启动时就加载这个servlet，值越小优先级越高。当值为负数或未指定时servlet被使用是才加载 -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<!-- 静态资源过滤 -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
		<url-pattern>*.js</url-pattern>
		<url-pattern>*.mp3</url-pattern>
		<url-pattern>*.swf</url-pattern>
		<url-pattern>*.xml</url-pattern>
		<url-pattern>*.ico</url-pattern>
		<url-pattern>*.jpg</url-pattern>
		<url-pattern>*.gif</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<!-- 这里在配成spring,下边也要写一个名为spring-servlet.xml的文件，主要用来配置它的controller -->
		<servlet-name>springMvc</servlet-name>
		<!-- spring-mvc能够处理的请求要匹配如下格式 -->
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>view/index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- 配置加载log4j.xml文件路径 -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.xml</param-value>
	</context-param>
	<!-- 配置log4j.xml变量 -->
	<context-param>
		<param-name>rootLevel</param-name>
		<param-value>DEBUG</param-value>
	</context-param>
	<context-param>
		<param-name>loggingLevel</param-name>
		<param-value>INFO</param-value>
	</context-param>
	
	<!-- 配置log4j.xml监听器 -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
</web-app>
